<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:padding="3dp"
        android:src="@drawable/user_avatar"
        android:id="@+id/ic_notification"/>

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_dots"
        android:id="@+id/action_ic"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="sender name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ic_notification"
        android:layout_marginLeft="14dp"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="14dp"

        android:layout_marginTop="11dp"
        android:id="@+id/sender_name" />

    <TextView
        android:text="sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/sender_name"
        android:layout_alignStart="@+id/sender_name"
        android:layout_alignLeft="@+id/sender_name"
        android:id="@+id/subject_notice"
         />

    <TextView
        android:text="TextView"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_notification"
        android:layout_alignLeft="@+id/subject_notice"
        android:layout_alignStart="@+id/subject_notice"
        android:layout_alignEnd="@+id/time_notify"
        android:layout_alignRight="@+id/time_notify"
        android:id="@+id/brify_notice"
        />
    <TextView
        android:text="2m ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_name"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toLeftOf="@+id/action_ic"
        android:layout_toStartOf="@+id/action_ic"
        android:id="@+id/time_notify" />


</RelativeLayout>
</android.support.v7.widget.CardView>